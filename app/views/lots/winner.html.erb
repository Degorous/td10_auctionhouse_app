<h1>Lotes finalizados</h1>

<div>
  <h2>Seus lotes vencedores</h2>
  <% if @user_lots.blank? %>
    Você não possui lotes 
  <%end%>

  <% @user_lots.each do |lot| %>
    <div>
      <table>
        <tr>
          <th>Lote <%= link_to lot.code, lot %></th>
        </tr>
        <tr>
          <td>Data de Início</td>
          <td>Data de encerramento</td>
        </tr>
        <tr>
          <td><%= I18n.localize(lot.start_date) %></td>
          <td><%= I18n.localize(lot.finish_date) %></td>
        </tr>
      </table>
    </div>
  <%end%>
</div>

<h2>Todos os lotes finalizados</h2>

<div>
  <% if @lots_finished.blank? %>
    Não existem lotes finalizados 
  <%end%>

  <% @lots_finished.each do |lot| %>
    <div>
      <table>
        <tr>
          <th>Lote <%= link_to lot.code, lot %></th>
        </tr>
        <tr>
          <td>Data de Início</td>
          <td>Data de encerramento</td>
        </tr>
        <tr>
          <td><%= I18n.localize(lot.start_date) %></td>
          <td><%= I18n.localize(lot.finish_date) %></td>
        </tr>
      </table>
    </div>
  <%end%>
</div>