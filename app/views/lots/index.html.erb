<h1>Lotes</h1>

<% if current_user&.admin? %>
  <% @lots.each do |lot| %>
    <div>
    <table>
      <tr>
        <th>Lote <%= link_to lot.code, lot %></th>
      </tr>
      <tr>
        <td>Data de Início</td>
        <td>Data de encerramento</td>
      </tr>
      <tr>
        <td><%= I18n.localize(lot.start_date) %></td>
        <td><%= I18n.localize(lot.finish_date) %></td>
      </tr>
      <tr>
        <td>
          <%= I18n.translate(lot.status) %>
        </td>
      </tr>
    </table>
  </div>
  <%end%>
<%end%>

<h2>Lotes em Andamento</h2>
<div>
  <% @lots_ongoing.each do |lot| %>
    <div>
      <table>
        <tr>
          <th>Lote <%= link_to lot.code, lot %></th>
        </tr>
        <tr>
          <td>Data de Início</td>
          <td>Data de encerramento</td>
        </tr>
        <tr>
          <td><%= I18n.localize(lot.start_date) %></td>
          <td><%= I18n.localize(lot.finish_date) %></td>
        </tr>
      </table>
    </div>
  <%end%>
</div>